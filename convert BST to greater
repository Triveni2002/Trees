class Solution {
    int sum=0;
    public void convert(TreeNode root){
        if(root==null)return;
        convert(root.right);
        //int c=root.val;
        //root.val=sum;
        sum=sum+root.val;
        root.val=sum;
        convert(root.left);
    }
    public TreeNode convertBST(TreeNode root) {
        convert(root);
        return root;
        
    }
}
